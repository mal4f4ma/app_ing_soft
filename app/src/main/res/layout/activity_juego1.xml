<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Juego1"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arrastra el nombre del color a cada cuadro que corresponda"
        android:textStyle="bold"
        android:gravity="top"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/j1_yellow_block"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="#ffff00"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/j1_purple_block"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="#cc33ff"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/j1_green_block"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="#009933"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/j1_blue_block"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="#0000ff"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/j1_red_block"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="#ff0000"
                android:layout_margin="5dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/bt_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yellow"
                android:layout_weight="20"/>
            <Button
                android:id="@+id/bt_verde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Green"
                android:layout_weight="20"/>
            <Button
                android:id="@+id/bt_azul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blue"
                android:layout_weight="20"/>
            <Button
                android:id="@+id/bt_rojo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Red"
                android:layout_weight="20"/>
            <Button
                android:id="@+id/bt_morado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pruple"
                android:layout_weight="20"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>