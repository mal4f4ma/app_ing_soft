<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Juego2_f"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arrastra el nombre de la figura a cada cuadro que corresponda"
        android:textStyle="bold"
        android:gravity="top"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/j1_triangulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/triangulo"
                android:layout_weight="20"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/j2_cuadrado"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/cuadrado"/>
            <ImageView
                android:id="@+id/j2_circulo"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/circulo"/>
            <ImageView
                android:id="@+id/j3_rectangulo"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/rectangulo"/>
            <ImageView
                android:id="@+id/j2_rombo"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/rombo"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/bt_rombo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rhombus"
                android:layout_weight="20"/>
            <Button
                android:id="@+id/bt_cuadrado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Square"
                android:layout_weight="20"/>
            <Button
                android:id="@+id/bt_circulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Circle"
                android:layout_weight="20"/>
            <Button
                android:id="@+id/bt_triangulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Triangle"
                android:layout_weight="20"/>
            <Button
                android:id="@+id/bt_rectangulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rectangle"
                android:layout_weight="20"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>