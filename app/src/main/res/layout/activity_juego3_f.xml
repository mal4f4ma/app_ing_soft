<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Juego3_f"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arrastra el nombre del animal a cada cuadro que corresponda"
        android:textStyle="bold"
        android:gravity="top"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/j3_gallo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/gallo"
                android:layout_weight="20"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/j3_borrego"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/borrego"/>
            <ImageView
                android:id="@+id/j3_puerco"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/puerco"/>
            <ImageView
                android:id="@+id/j3_pollo"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/pollo"/>
            <ImageView
                android:id="@+id/j3_burro"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/burro"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/bt_gallo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rooster"
            android:layout_weight="20"/>
        <Button
            android:id="@+id/bt_burro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donkey"
            android:layout_weight="20"/>
        <Button
            android:id="@+id/bt_puerco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pig"
            android:layout_weight="20"/>
        <Button
            android:id="@+id/bt_borrego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sheep"
            android:layout_weight="20"/>
        <Button
            android:id="@+id/bt_pollo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chicken"
            android:layout_weight="20"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>